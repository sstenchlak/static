@prefix rembi: <http://www.ebi.ac.uk/bioimage-archive/ontology/rembi#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .

### Ontology declaration
rembi: a owl:Ontology ;
    rdfs:label "REMBI Ontology" ;
    rdfs:comment "OWL ontology representing the REMBI metadata model (version 1.5)." .

### Classes
rembi:REMBIStudy rdf:type owl:Class ;
    rdfs:label "REMBIStudy" ;
    rdfs:comment "The root entity representing a REMBI metadata record." .

rembi:Study rdf:type owl:Class ;
    rdfs:label "Study" ;
    rdfs:comment "Information about the overall study, including title, description, and metadata." .

rembi:StudyComponent rdf:type owl:Class ;
    rdfs:label "StudyComponent" ;
    rdfs:comment "Sub-units or parts of a study, such as experimental conditions or replicates." .

rembi:Biosample rdf:type owl:Class ;
    rdfs:label "Biosample" ;
    rdfs:comment "Biological sample information, including organism and variables." .

rembi:Specimen rdf:type owl:Class ;
    rdfs:label "Specimen" ;
    rdfs:comment "Specific specimen details, such as preparation and protocol." .

rembi:ImageAcquisition rdf:type owl:Class ;
    rdfs:label "ImageAcquisition" ;
    rdfs:comment "Details of how images were captured, including instrument and parameters." .

rembi:ImagingMethod rdf:type owl:Class ;
    rdfs:label "ImagingMethod" ;
    rdfs:comment "Controlled vocabulary terms or ontologies describing imaging modalities." .

rembi:ImageCorrelation rdf:type owl:Class ;
    rdfs:label "ImageCorrelation" ;
    rdfs:comment "Information on spatial or temporal alignment between image series." .

rembi:ImageAnalysis rdf:type owl:Class ;
    rdfs:label "ImageAnalysis" ;
    rdfs:comment "Image processing or analysis steps applied to raw data." .

rembi:Annotations rdf:type owl:Class ;
    rdfs:label "Annotations" ;
    rdfs:comment "Annotation metadata at study or file level, including methods and criteria." .

rembi:Author rdf:type owl:Class ;
    rdfs:label "Author" ;
    rdfs:comment "Information about an individual who contributed to the study." .

rembi:OrganisationURL rdf:type owl:Class ;
    rdfs:label "OrganisationURL" ;
    rdfs:comment "URL of the author's affiliated organisation." .

rembi:OrganisationInfo rdf:type owl:Class ;
    rdfs:label "OrganisationInfo" ;
    rdfs:comment "Additional information about an organisation, such as name and address." .

rembi:License rdf:type owl:Class ;
    rdfs:label "License" ;
    rdfs:comment "License under which the study data are made available." .

rembi:Funding rdf:type owl:Class ;
    rdfs:label "Funding" ;
    rdfs:comment "Information on financial support for the study." .

rembi:GrantReference rdf:type owl:Class ;
    rdfs:label "GrantReference" ;
    rdfs:comment "Specific grant identifiers and funders." .

rembi:Publication rdf:type owl:Class ;
    rdfs:label "Publication" ;
    rdfs:comment "References to publications associated with the study." .

rembi:Link rdf:type owl:Class ;
    rdfs:label "Link" ;
    rdfs:comment "External hyperlinks related to the study or its data." .

rembi:Organism rdf:type owl:Class ;
    rdfs:label "Organism" ;
    rdfs:comment "Taxonomic information about the biological source." .

rembi:AnnotationType rdf:type owl:Class ;
    rdfs:label "AnnotationType" ;
    rdfs:comment "Controlled vocabulary for types of annotations." .

rembi:FileLevelMetadata rdf:type owl:Class ;
    rdfs:label "FileLevelMetadata" ;
    rdfs:comment "Metadata specific to individual image files." .

### Object properties
rembi:hasStudy rdf:type owl:ObjectProperty ;
    rdfs:label "has study" ;
    rdfs:comment "Links a REMBIStudy to its Study entity." ;
    rdfs:domain rembi:REMBIStudy ;
    rdfs:range rembi:Study .

rembi:hasStudyComponent rdf:type owl:ObjectProperty ;
    rdfs:label "has study component" ;
    rdfs:comment "Associates a REMBIStudy with its components." ;
    rdfs:domain rembi:REMBIStudy ;
    rdfs:range rembi:StudyComponent .

rembi:hasBiosample rdf:type owl:ObjectProperty ;
    rdfs:label "has biosample" ;
    rdfs:comment "Associates a study with its biosample." ;
    rdfs:domain rembi:REMBIStudy ;
    rdfs:range rembi:Biosample .

rembi:hasSpecimen rdf:type owl:ObjectProperty ;
    rdfs:label "has specimen" ;
    rdfs:comment "Links a study to specimen details." ;
    rdfs:domain rembi:REMBIStudy ;
    rdfs:range rembi:Specimen .

rembi:hasImageAcquisition rdf:type owl:ObjectProperty ;
    rdfs:label "has image acquisition" ;
    rdfs:comment "Associates a study with its image acquisition metadata." ;
    rdfs:domain rembi:REMBIStudy ;
    rdfs:range rembi:ImageAcquisition .

rembi:hasImageCorrelation rdf:type owl:ObjectProperty ;
    rdfs:label "has image correlation" ;
    rdfs:comment "Links a study to its correlation metadata." ;
    rdfs:domain rembi:REMBIStudy ;
    rdfs:range rembi:ImageCorrelation .

rembi:hasImageAnalysis rdf:type owl:ObjectProperty ;
    rdfs:label "has image analysis" ;
    rdfs:comment "Associates a study with its image analysis steps." ;
    rdfs:domain rembi:REMBIStudy ;
    rdfs:range rembi:ImageAnalysis .

rembi:hasAnnotations rdf:type owl:ObjectProperty ;
    rdfs:label "has annotations" ;
    rdfs:comment "Links a study with annotation metadata." ;
    rdfs:domain rembi:REMBIStudy ;
    rdfs:range rembi:Annotations .

rembi:hasAuthor rdf:type owl:ObjectProperty ;
    rdfs:label "has author" ;
    rdfs:comment "Associates a Study with its Author(s)." ;
    rdfs:domain rembi:Study ;
    rdfs:range rembi:Author .

rembi:hasLicense rdf:type owl:ObjectProperty ;
    rdfs:label "has license" ;
    rdfs:comment "Links a Study to its License." ;
    rdfs:domain rembi:Study ;
    rdfs:range rembi:License .

rembi:hasFunding rdf:type owl:ObjectProperty ;
    rdfs:label "has funding" ;
    rdfs:comment "Links a Study to funding information." ;
    rdfs:domain rembi:Study ;
    rdfs:range rembi:Funding .

rembi:hasPublication rdf:type owl:ObjectProperty ;
    rdfs:label "has publication" ;
    rdfs:comment "Associates a Study with its publications." ;
    rdfs:domain rembi:Study ;
    rdfs:range rembi:Publication .

rembi:hasLink rdf:type owl:ObjectProperty ;
    rdfs:label "has link" ;
    rdfs:comment "Links a Study to external Link entities." ;
    rdfs:domain rembi:Study ;
    rdfs:range rembi:Link .

rembi:hasOrganisationURL rdf:type owl:ObjectProperty ;
    rdfs:label "has organisation URL" ;
    rdfs:comment "Links an Author to the URL of their organisation." ;
    rdfs:domain rembi:Author ;
    rdfs:range rembi:OrganisationURL .

rembi:hasOrganisationInfo rdf:type owl:ObjectProperty ;
    rdfs:label "has organisation info" ;
    rdfs:comment "Links an Author to additional organisation info." ;
    rdfs:domain rembi:Author ;
    rdfs:range rembi:OrganisationInfo .

rembi:hasGrantReference rdf:type owl:ObjectProperty ;
    rdfs:label "has grant reference" ;
    rdfs:comment "Links Funding to specific GrantReference(s)." ;
    rdfs:domain rembi:Funding ;
    rdfs:range rembi:GrantReference .

rembi:hasAuthorInAnnotation rdf:type owl:ObjectProperty ;
    rdfs:label "has author in annotation" ;
    rdfs:comment "Links Annotations to Author(s)." ;
    rdfs:domain rembi:Annotations ;
    rdfs:range rembi:Author .

rembi:hasFileMetadata rdf:type owl:ObjectProperty ;
    rdfs:label "has file metadata" ;
    rdfs:comment "Links Annotations to FileLevelMetadata." ;
    rdfs:domain rembi:Annotations ;
    rdfs:range rembi:FileLevelMetadata .

rembi:hasAnnotationType rdf:type owl:ObjectProperty ;
    rdfs:label "has annotation type" ;
    rdfs:comment "Associates Annotation entities with their AnnotationType." ;
    rdfs:domain rembi:Annotations , rembi:FileLevelMetadata ;
    rdfs:range rembi:AnnotationType .

rembi:hasOrganism rdf:type owl:ObjectProperty ;
    rdfs:label "has organism" ;
    rdfs:comment "Links a Biosample to its Organism details." ;
    rdfs:domain rembi:Biosample ;
    rdfs:range rembi:Organism .

rembi:hasImagingMethod rdf:type owl:ObjectProperty ;
    rdfs:label "has imaging method" ;
    rdfs:comment "Links ImageAcquisition to ImagingMethod entries." ;
    rdfs:domain rembi:ImageAcquisition ;
    rdfs:range rembi:ImagingMethod .
